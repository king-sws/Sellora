// =========================================================
// --- NEWSLETTER SUBSCRIPTION ---
// =========================================================

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  
  // User relation (optional - for logged-in users)
  userId    String?
  
  // Subscription preferences
  preferences Json?  // Can store preferences like frequency, topics, etc.
  
  // Source tracking
  source      String?  // e.g., "homepage", "checkout", "footer"
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  
  // Status tracking
  confirmedAt   DateTime?
  unsubscribedAt DateTime?
  unsubscribeReason String?
  
  // Metadata
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([isActive])
  @@index([userId])
  @@index([createdAt])
}

model PromoModal {
  id             String    @id @default(cuid())
  title          String
  description    String?
  discountValue  String    // e.g., "25%", "$50 OFF"
  couponCode     String?
  buttonText     String    @default("Shop Now")
  buttonLink     String    @default("/")
  
  // Styling
  primaryColor   String    @default("#dc2626") // red-600
  image          String?   // Optional promo image
  
  // Display settings
  isActive       Boolean   @default(true)
  showOnPages    String[]  @default(["home"]) // ["home", "all", "products"]
  delaySeconds   Int       @default(1) // Delay before showing
  
  // Features list
  features       Json?     // Array of feature strings
  
  // Scheduling
  startsAt       DateTime?
  expiresAt      DateTime?
  
  // Terms
  termsText      String    @default("*Terms and conditions apply")
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  @@index([isActive])
  @@index([startsAt])
  @@index([expiresAt])
}